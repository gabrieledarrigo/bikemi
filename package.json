{
  "name": "bikemi",
  "version": "0.0.1",
  "description": "Count the number of available ATM bikes to rent in Milan, every 15 seconds",
  "workspaces": [
    "packages/common",
    "packages/publish-stations-information",
    "packages/publish-stations-status",
    "packages/server"
  ],
  "scripts": {
    "build": "tsc --build --verbose",
    "prestart": "npm run build",
    "start": "npm run start --workspaces --if-present",
    "test": "tsx --test $(find packages -type f -name '*.test.ts')"
  },
  "keywords": [
    "bikemi",
    "milan",
    "atm"
  ],
  "author": "Gabriele D'Arrigo, <darrigo.g@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "typescript": "5.3.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.11",
    "@types/sinon": "17.0.2",
    "sinon": "17.0.1",
    "tsx": "4.6.2"
  }
}
